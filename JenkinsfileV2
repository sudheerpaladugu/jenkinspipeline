pipeline{
    agent any
    
    parameters{
        string(name:'tomcat_dev', defaultValue:'C:/Data/devtools/apache-tomcat-8.5.23/webapps', description:'Development server')
        string(name:'tomcat_prod', defaultValue:'C:/Data/devtools/apache-tomcat-PROD/webapps', description:'Production server')
        string(name:'target_path', defaultValue: 'webapp/target', description:'To copy file from target directory for deployment')
    }

    triggers{
        pollSCM('* * * * *')
    }

    stages {
        stage('Build'){
                steps {
                    bat 'mvn clean package'
                }
                post {
                    success {
                        echo 'Now Archiving...'
                        archiveArtifacts artifacts: '**/target/*.war'
                    }
                }
            }

        stage ('Deployments'){

            parallel {

                stage ('Deploy to Staging'){
                    steps {
                        bat "copy ${target_path}/*.war ${tomcat_dev}"
                    }
                }

                stage ('Deploy to Production'){
                    steps {
                        bat "copy ${target_path}/*.war ${tomcat_prod}"
                    }
                }
            }
        }
        
    }

}